---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Configure from "./Configure.astro";
import TitleBar from "../components/TitleBar.astro";
let { pageTitle, showAccounts, featuresPage } = Astro.props;
if (showAccounts === undefined) showAccounts = true;
if (featuresPage === undefined) featuresPage = false;
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" href="/img/favicon-32x32.png">
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <style>
        body {
            --page-width: 1200px;
        }
    </style>
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/pages.css">
    {featuresPage && <link rel="stylesheet" href="/css/features.css">}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
          rel="stylesheet" crossorigin="anonymous" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65">
    <Configure/>
</head>
<body>
<Header />

<div class="page-body">
    <TitleBar pageTitle={pageTitle} showAccounts={showAccounts}/>
    <slot />
</div>

<Footer views="page" />
</body>
</html>